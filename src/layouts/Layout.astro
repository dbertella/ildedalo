---
import { fetchMenuFromWordPress, buildMenuHierarchy } from "../utils/menu.js";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  url?: string;
}

const { 
  title, 
  description = "Il Dedalo √® uno spazio per l'anima, la creativit√†, la cura e la bellezza di condividere.",
  url = "https://ildedalo.com"
} = Astro.props;

// Fetch menu data on the server side
const menuItems = await fetchMenuFromWordPress();
const hierarchicalMenu = buildMenuHierarchy(menuItems);
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="theme-color" content="#669999" />
    <meta name="description" content={description} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content="Il Dedalo üåø Soul Space" />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:title" content="Il Dedalo üåø Soul Space" />
    <meta property="twitter:description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={url} />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WJMZCJ1BG1"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-WJMZCJ1BG1');
    </script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <div class="page">
      <header class="head-container">
        <slot name="header" />
      </header>
      <main>
        <slot />
      </main>
      <slot name="footer" />
    </div>
  </body>
</html>

<script define:vars={{ menuData: hierarchicalMenu }}>
  // Make menu data available globally for client-side components
  window.__MENU_DATA__ = menuData;
</script>

